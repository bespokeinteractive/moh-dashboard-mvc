    @using (Html.BeginForm("PostUsers", "Admin", FormMethod.Post))
    {
        <div id="modal2" class="modal modal-fixed-footer">
            <div class="modal-content">
                <h4 class="header2">User Registration Form</h4>
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i>
                                @Html.TextBoxFor(model => model.Users.Username)
                                <label for="first_name">Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">email</i>
                                @Html.TextBoxFor(model => model.Users.Email)
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock_outline</i>
                                @Html.PasswordFor(model => model.Users.Password)
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock_outline</i>
                                <input id="password5" type="password" class="validate">
                                <label for="password">Confirm Password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">question_answer</i>
                                @Html.DropDownListFor(model => model.Users.Roles.Id, Model.Role, "Select Role")
                                <label for="message">Role</label>
                            </div>
                        </div>
                        <div id="county" class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">question_answer</i>
                                @Html.DropDownListFor(model => model.Users.County.Id, Model.Counties, "Select County")
                                <label for="message">county</label>
                            </div>
                        </div>
                        <div id="sub_county" class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">question_answer</i>
                                <label for="message">Constituency</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <button class="btn cyan waves-effect waves-light right" type="submit" name="action">
                                    Submit
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }


