                            }
                            <label for="filled-in-box-l3">Level 3</label>
                            @Html.HiddenFor(model => model.NormsView.L3Norm)
                        </div>

                        <div class="col s2">
                            @if (Model.NormsView.L4Norm == 0)
                            {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l4">
                            }
                            else
                            {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l4" checked>
                            }
                            <label for="filled-in-box-l4">Level 4</label>
                            @Html.HiddenFor(model => model.NormsView.L4Norm)
                        </div>

                        <div class="col s2">
                            @if (Model.NormsView.L5Norm == 0)
                            {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l5">
                            }
                            else
                            {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l5" checked>
                            }
                            <label for="filled-in-box-l5">Level 5</label>
                            @Html.HiddenFor(model => model.NormsView.L5Norm)
                        </div>

                        <div class="col s2">
                            @if (Model.NormsView.L6Norm == 0)
                            {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l6">
                            }
                            else
                            {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l6" checked>
                            }
                            <label for="filled-in-box-l6">Level 6</label>
                            @Html.HiddenFor(model => model.NormsView.L6Norm)
                        </div>
                    
                </div>
            </li>
            <li class="collection-item">
                <div style="margin: 0 0 45px 45px">
                    <a class="btn waves-effect waves-light gradient-45deg-purple-deep-orange">Save</a>
                </div>
            </li>
        </ul>
        @*@Html.HiddenFor(model => model.NormsView.Item.Id)*@
    }
</div>
