@model hrhdashboard.ViewModel.UsersAddViewModel;

@{
    ViewData["Title"] = "Add User";
}

<style>
    .collection .collection-item.avatar {
        min-height: 0;
        line-height: 0;
    }
</style>

<script>
    jq(function() {
        jq('a.btn').click(function(){
            jq('form').submit();
        });
    });
</script>

<div>
    @using (Html.BeginForm("PostUsers", "Admin", FormMethod.Post))
    {
        <ul style="background-color:white" id="projects-collection" class="collection z-depth-1">
            <li class="collection-item avatar">
                <i class="material-icons red accent-2 circle">person_add</i>
                <h5 class="collection-header deep-orange-text">User Details</h5>
                <span class="right"></span>
            </li>

            <li class="collection-item">
                <div class="row" style="margin-bottom:0px">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(model => model.user.Name)
                        <label for="icon_prefix">Full Name</label>
                    </div>

                    <div class="input-field col s6">
                        <i class="material-icons prefix">email</i>
                        @Html.TextBoxFor(model => model.user.Email)
                        <label for="icon_prefix">Email</label>
                    </div>

                    <div class="input-field col s6">
                        <i class="material-icons prefix">assignment_ind</i>
                        @Html.TextBoxFor(model => model.user.Username)
                        <label for="icon_prefix">Username</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">lock_outline</i>
                        @Html.PasswordFor(model => model.user.Password)
                        <label for="icon_prefix">Password</label>
                    </div>

                    <div class="input-field col s6">
                        <i class="material-icons prefix">lock_outline</i>
                        @Html.PasswordFor(model => model.password)
                        <label for="icon_prefix">Confirm Password</label>
                    </div>
                </div>
            </li>

            <li class="collection-item avatar">
                <i class="material-icons red accent-2 circle">local_library</i>
                <h5 class="collection-header deep-orange-text">User Roles</h5>
                <span class="right"></span>
            </li>

            <li class="collection-item">
                <div class="row">
                    <div class="input-field col-md-6">
                        <i class="material-icons prefix">question_answer</i>
                        @Html.DropDownListFor(model => model.user.Role.Id, Model.roles, "Select Role")
                        <label for="message">Role</label>
                    </div>

                    <div id="accesslvl" class="input-field col s6" style="display:none">
                        <i class="material-icons prefix">assignment</i>
                        @Html.TextBoxFor(model => model.accesslvl)
                        <label for="icon_prefix">Email</label>
                    </div>
                </div>

                <div style="margin: 0 0 45px 45px">
                    <a class="btn waves-effect waves-light gradient-45deg-purple-deep-orange">Save</a>
                </div>
            </li>
        </ul>
    }
</div>
