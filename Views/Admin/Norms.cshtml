@model hrhdashboard.ViewModel.AdminNormsViewModel;

@{
    ViewData["Title"] = "Norms";
}

<script src="~/lib/data-tables/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    jq(function () {
        
        jq('#queue-table td').on('click', 'i.blue-text', function () {
            window.location.href = "/administrator/norms/edit/" + jq(this).data('idnt');
        });
       
    });
</script>

<style>
    #queue-table_length {
        display: none;
    }
    #queue-table_filter {
        text-align: left;
        margin-top: 10px;
    }
    #queue-table_filter i {
        cursor: pointer;
        margin: 13px 30px 0;
        float: right;
    }
    #queue-table_filter label input {
        padding: 0px;
        height: 1.9rem;
        margin: 0;
    }
    #queue-table,
    #queue-table th,
    #queue-table td {
        border-radius: 0px;
    }
    #queue-table tbody tr {
        cursor: pointer;
    }
    #queue-title {
        display: inline-block;
        margin-bottom: -60px;
        float: left;
        margin-top: 15px;
    }
    i.medium {
        font-size: 2.5rem;
        z-index: 1000;
    }
    td i.material-icons {
        font-size: 24px;
        height: 24px;
        line-height: 24px;
        margin: 0 2px;
    }
    td {
        padding: 5px;
        line-height: 0px;
        text-align: center;
    }
    [type="checkbox"].filled-in:disabled:not(:checked) + label:after {
        border-color: #2196F3;
        background-color: transparent;
    }
    [type="checkbox"].filled-in:disabled:checked + label:after {
        background-color: #2196F3;
        border-color: #2196F3;
    }
    [type="checkbox"] + label {
        height: 11px;
    }
    table td:first-child {
        padding-left: 25px;
        text-align: left;
    }
</style>


<nav class="navbar nav-extended">
    <div class="nav-content">
        <ul class="tabs">
            <li class="tab tab1"><a href="#checklist">Minimum Standards</a></li>
            <li class="tab tab2"><a href="#humanresources">Human Resource</a></li>
            <li class="tab tab3"><a href="#infrastructure">Infrastructure</a></li>
        </ul>
    </div>
    <div id="checklist" class="col s12">
        <table id="queue-table" class="responsive-table display stripped bordered" cellspacing="0">
            <thead class="who-color white-text">
                <tr>
                    <th>NAME</th>
                    <th>Level 1</th>
                    <th>Level 2</th>
                    <th>Level 3</th>
                    <th>Level 4</th>
                    <th>Level 5</th>
                    <th>Level 6</th>
                    <th style="width:70px;">&nbsp;</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var norms in Model.FacilityChecks) { 
                    <tr>
                        <td>@norms.Item.Name</td>
                        <td>
                            @if(norms.L1Norm > 0) {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" checked disabled>
                            }
                            else {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" disabled>
                            }
                            <label for="filled-in-box-l1"></label>
                        </td>
                        <td>
                            @if(norms.L2Norm > 0) {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" checked disabled>
                            }
                            else {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" disabled>
                            }
                            <label for="filled-in-box-l1"></label>
                        </td>
                        <td>
                            @if(norms.L3Norm > 0) {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" checked disabled>
                            }
                            else {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" disabled>
                            }
                            <label for="filled-in-box-l1"></label>
                        </td>
                        <td>
                            @if(norms.L4Norm > 0) {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" checked disabled>
                            }
                            else {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" disabled>
                            }
                            <label for="filled-in-box-l1"></label>
                        </td>
                        <td>
                            @if(norms.L5Norm > 0) {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" checked disabled>
                            }
                            else {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" disabled>
                            }
                            <label for="filled-in-box-l1"></label>
                        </td>
                        <td>
                            @if(norms.L6Norm > 0) {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" checked disabled>
                            }
                            else {
                                <input type="checkbox" class="filled-in" id="filled-in-box-l1" disabled>
                            }
                            <label for="filled-in-box-l1"></label>
                        </td>
                        <td>
                            <i class="material-icons blue-text left" data-idnt="@norms.Item.Id">border_color</i>
                            <i class="material-icons red-text right">delete_forever</i>
                        </td>
                    </tr> 
                }             
            </tbody>
        </table>
    </div>
    <div id="humanresources" class="body">      
            <table id="queue-table" class="responsive-table display stripped bordered" cellspacing="0">
                <thead class="who-color white-text">
                    <tr>
                        <th>NAME</th>
                        <th>Level 1</th>
                        <th>Level 2</th>
                        <th>Level 3</th>
                        <th>Level 4</th>
                        <th>Level 5</th>
                        <th>Level 6</th>
                        <th style="width:70px">&nbsp;</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var norms in Model.HumanResources) {
                        <tr>                       
                            <td><a class="who-color-text" href="/administrator/users/@norms.Item.Id">@norms.Item.Name</a></td>
                            <td>@norms.L1Norm</td>
                            <td>@norms.L2Norm</td>
                            <td>@norms.L3Norm</td>
                            <td>@norms.L4Norm</td>
                            <td>@norms.L5Norm</td>
                            <td>@norms.L6Norm</td>
                            <td>
                                <i class="material-icons blue-text left" data-idnt="@norms.Item.Id">border_color</i>
                                <i class="material-icons red-text right">delete_forever</i>
                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div> 
    <div id="infrastructure" class="body">
        <table id="queue-table" class="responsive-table display stripped bordered" cellspacing="0">
            <thead class="who-color white-text">
                <tr>

                    <th>NAME</th>
                    <th>Level 1</th>
                    <th>Level 2</th>
                    <th>Level 3</th>
                    <th>Level 4</th>
                    <th>Level 5</th>
                    <th>Level 6</th>
                    <th style="width:70px;">&nbsp;</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var norms in Model.Infrastructure)
                {
                    <tr>
                        <td><a class="who-color-text" href="/administrator/users/@norms.Item.Id">@norms.Item.Name</a></td>
                        <td>@norms.L1Norm</td>
                        <td>@norms.L2Norm</td>
                        <td>@norms.L3Norm</td>
                        <td>@norms.L4Norm</td>
                        <td>@norms.L5Norm</td>
                        <td>@norms.L6Norm</td>
                        <td>
                            <i class="material-icons blue-text left" data-idnt="@norms.Item.Id">border_color</i>
                            <i class="material-icons red-text right">delete_forever</i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</nav>
<div id="add-assets" class="modal modal-fixed-footer" style="width: 600px">
    <div class="modal-content">
        <h4> ADD USERS</h4>
    </div>
    <div class="modal-footer">
        <a class="modal-action modal-close waves-effect waves-red btn-flat ">Disagree</a>
        <a class="waves-effect modal-close waves-green btn-flat " id="agree-btn">Agree</a>
    </div>
</div>
